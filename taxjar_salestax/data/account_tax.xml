<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
             A tax entry is needed for every company that applies TaxJar, so that
             the report signs, collection account and analytic account can be configured.
             The tax is not supposed to be actually present on invoice or sale order lines.
        -->
        <record id="account_tax_taxjar" model="account.tax">
            <field name="name">TaxJar</field>
            <field eval="0.0" name="amount"/>
            <field name="type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="description">Sales tax</field>
        </record>
    </data>
</odoo>
