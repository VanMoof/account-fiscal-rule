<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name="taxjar_applies" invisible="1"/>
                <field name="taxjar_amount" invisible="1"/>
                <field name="taxjar_policy"
                       attrs="{'invisible': [('taxjar_applies', '=', False)]}"/>
            </field>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                <field name="taxjar_amount" readonly="1"
                       attrs="{'column_invisible': [('parent.taxjar_applies', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='price_unit']" position="before">
                <field name="taxjar_amount" readonly="1"
                       attrs="{'invisible': [('parent.taxjar_applies', '=', False)]}"/>
            </xpath>
            <field name="amount_total" position="after">
                <td style="width: 50%"/>
                <button name="button_update_taxjar_taxes"
                        attrs="{'invisible': ['|', '&amp;', ('taxjar_applies', '=', False), ('taxjar_amount', '=', 0), ('state', 'in', ('done', 'cancel'))]}"
                        string="Update from TaxJar"
                        class="btn-link"
                        type="object"/>
            </field>
        </field>
    </record>

</odoo>
