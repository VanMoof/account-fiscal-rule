<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_taxjar_product_code_search" model="ir.ui.view">
        <field name="model">taxjar.product.code</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="view_taxjar_product_code_tree" model="ir.ui.view">
        <field name="model">taxjar.product.code</field>
        <field name="arch" type="xml">
            <tree editable="bottom" decoration-muted="not active">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_taxjar_product_code" model="ir.actions.act_window">
        <field name="name">TaxJar Product Codes</field>
        <field name="res_model">taxjar.product.code</field>
        <field name="view_mode">tree</field>
        <field name="context">{'active_test': False}</field>
    </record>

    <menuitem action="action_taxjar_product_code"
              id="menu_taxjar_product_code"
              name="TaxJar Product Codes"
              parent="menu_taxjar"
              sequence="20"/>

</odoo>
